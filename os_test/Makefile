include rules.mk
# --silent
V=--silent


default: all

info:	
	@echo "----------------------------------------------------------------------"
	@make  $(V) -f do.mk info 
	@echo info ...done.
	@echo "----------------------------------------------------------------------"

depend:	
	@echo "----------------------------------------------------------------------"
	@make  $(V) -f do.mk depend 
	@echo info ...done.
	@echo "----------------------------------------------------------------------"



all:		
	@echo "----------------------------------------------------------------------"
	@make    $(V)  -f do.mk all 
	@echo all ...done.
	@echo "----------------------------------------------------------------------"


asm:		
	@echo "----------------------------------------------------------------------"
	@make    $(V)  -f do.mk asm 
	@echo all ...done.
	@echo "----------------------------------------------------------------------"


clean:	
	@echo "----------------------------------------------------------------------"
	@make   $(V) -f do.mk clean
	@echo clean ...done.
	@echo "----------------------------------------------------------------------"
	
		
distclean: 
	@echo "----------------------------------------------------------------------"
	@make   $(V) -f do.mk distclean
	@echo distclean ...done
	@echo "----------------------------------------------------------------------"

test:
	@echo "----------------------------------------------------------------------"
	@make   $(V) -f do.mk test
	@echo test ...done
	@echo "----------------------------------------------------------------------"

add_ext_src:
	@echo "----------------------------------------------------------------------"
	@make   $(V) -f do.mk add_ext_src
	@echo add extern caOS source ...done
	@echo "----------------------------------------------------------------------"

remove_ext_src:
	@echo "----------------------------------------------------------------------"
	@make   $(V) -f do.mk remove_ext_src
	@echo remove estern caOS source ...done
	@echo "----------------------------------------------------------------------"


.PHONY:  distclean clean asm all depend info prepare unprepare

